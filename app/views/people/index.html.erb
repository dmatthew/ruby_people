<h1>All People</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Occupation</th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.age %></td>
      <td><%= person.occupation %></td>
      <td><%= link_to 'Show', person_path(person) %>
      <td><%= link_to 'Edit', edit_person_path(person) %>
      <td><%= link_to 'Delete',
                      person_path(person),
                      method: :delete,
                      data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
