<h1>New Person</h1>

<%= form_for :person, url: people_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>

  <p>
    <%= f.label :occupation %><br>
    <%= f.text_field :occupation %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
